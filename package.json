{
  "name": "jira-pr-link-action",
  "version": "0.0.2",
  "description": "GitHub Action to link JIRA tickets in pull requests.",
  "main": "src/index.ts",
  "scripts": {
    "build": "npm run typecheck && npm run bundle",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "github-actions",
    "jira",
    "pull-request"
  ],
  "repository": {
    "url": "https://github.com/CodeNameGrant/jira-pr-link-action"
  },
  "author": {
    "name": "Grant Walker",
    "url": "https://github.com/CodeNameGrant"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "@octokit/rest": "^22.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "esbuild": "^0.25.9",
    "typescript": "^5.9.2"
  }
}
